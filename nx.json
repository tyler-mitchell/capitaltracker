{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "npmScope": "capitaltracker",
    "defaultProject": "web",
    "plugins": ["@ignisda/nx-rust"],
    "namedInputs": {
        "default": ["{projectRoot}/**/*", "sharedGlobals", "noPackageJson"],
        "production": [
            "default",
            "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
            "!{projectRoot}/tsconfig.spec.json",
            "!{projectRoot}/jest.config.[jt]s",
            "!{projectRoot}/.eslintrc.json"
        ],
        "noPackageJson": ["!{projectRoot}/package.json"],
        "sharedGlobals": ["{workspaceRoot}/babel.config.json"],
        "desktopExported": ["{workspaceRoot}/dist/apps/clients/web/exported"],
        "grpcModels": ["{workspaceRoot}/tools/models/**/*.proto"]
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["default", "production", "^production"]
        },
        "lint": {
            "dependsOn": ["^build"],
            "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
        },
        "test": {
            "dependsOn": ["^build"],
            "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"]
        },
        "e2e": {
            "dependsOn": ["build"],
            "inputs": ["default", "^production"]
        }
    },
    "tasksRunnerOptions": {
        "default": {
            "runner": "@nrwl/nx-cloud",
            "options": {
                "cacheableOperations": [
                    "build",
                    "lint",
                    "test",
                    "e2e",
                    "frontend",
                    "codegen",
                    "test-codegen",
                    "export",
                    "build-storybook"
                ],
                "accessToken": "MWY5NGM2MWYtMzljNi00ZDFiLTk2YzktYTFjYzBmZTNkNjYyfHJlYWQtd3JpdGU="
            }
        }
    },
    "generators": {
        "@nrwl/react": {
            "application": {
                "babel": true
            },
            "library": {
                "unitTestRunner": "jest"
            }
        },
        "@nrwl/next": {
            "application": {
                "style": "css",
                "linter": "eslint"
            }
        }
    }
}
