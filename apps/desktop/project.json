{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/client/src",
    "targets": {
        "frontend": {
            "command": "npx nx export"
        },
        "build": {
            "dependsOn": ["frontend"],
            "executor": "@ignisda/nx-rust:build",
            "options": {
                "release": false,
                "locked": true
            },
            "configurations": {
                "production": {
                    "release": true,
                    "locked": true
                }
            }
        },
        "test": {
            "dependsOn": ["build"],
            "executor": "@ignisda/nx-rust:test",
            "options": {
                "release": false,
                "locked": true
            },
            "configurations": {
                "production": {
                    "release": true,
                    "locked": true
                }
            }
        },
        "lint": {
            "dependsOn": ["build"],
            "executor": "@ignisda/nx-rust:test",
            "options": {
                "release": false,
                "locked": true
            },
            "configurations": {
                "production": {
                    "release": true,
                    "locked": true
                }
            }
        },
        "export": {
            "dependsOn": ["build"],
            "command": "tauri build"
        },
        "dev": {
            "command": "tauri dev"
        },
        "fmt": {
            "command": "cargo fmt -p desktop --check"
        }
    },
    "tags": []
}
