{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/client/src",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "[ -d '../dist/apps/web/exported' ] || yarn export; cargo build --release"
            }
        },
        "export": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tauri build"
            }
        },
        "dev": {
            "executor": "nx:run-commands",
            "options": {
                "command": "tauri dev"
            }
        },
        "fmt": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cargo fmt --all -- --check"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "[ -d '../dist/apps/web/exported' ] || yarn export; cargo test"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "[ -d '../dist/apps/web/exported' ] || yarn export; cargo clippy -- --no-deps --deny warnings"
            }
        }
    },
    "tags": []
}
