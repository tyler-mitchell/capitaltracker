{
    "name": "desktop",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/client/src",
    "targets": {
        "build": {
            "inputs": ["desktopExported"],
            "dependsOn": ["^export"],
            "executor": "@ignisda/nx-rust:build",
            "defaultConfiguration": "production",
            "options": {
                "targetDir": "apps/clients/desktop/target",
                "locked": true
            },
            "configurations": {
                "production": {
                    "release": true
                },
                "development": {
                    "release": false
                }
            }
        },
        "test": {
            "inputs": ["desktopExported"],
            "dependsOn": ["^export"],
            "executor": "@ignisda/nx-rust:test",
            "defaultConfiguration": "production",
            "options": {
                "targetDir": "apps/clients/desktop/target",
                "locked": true
            },
            "configurations": {
                "production": {
                    "release": true
                },
                "development": {
                    "release": false
                }
            }
        },
        "lint": {
            "inputs": ["desktopExported"],
            "dependsOn": ["^export"],
            "defaultConfiguration": "production",
            "executor": "nx:run-commands",
            "configurations": {
                "production": {
                    "command": "CARGO_TARGET_DIR=apps/clients/desktop/target cargo clippy --release -- --D warnings --no-deps; unset CARGO_TARGET_DIR"
                },
                "development": {
                    "command": "CARGO_TARGET_DIR=apps/clients/desktop/target cargo clippy -- --D warnings --no-deps; unset CARGO_TARGET_DIR"
                }
            }
        },
        "start": {
            "inputs": ["desktopExported"],
            "dependsOn": ["^export"],
            "executor": "nx:run-commands",
            "defaultConfiguration": "development",
            "configurations": {
                "production": {
                    "command": "tauri dev -- --release --target-dir=target"
                },
                "development": {
                    "command": "tauri dev -- --target-dir=target"
                }
            }
        },
        "fmt": {
            "command": "cargo fmt -p desktop --check"
        },
        "export": {
            "inputs": ["desktopExported"],
            "dependsOn": ["^export"],
            "command": "tauri build -- --target-dir=target --locked"
        }
    },
    "implicitDependencies": ["web"],
    "tags": []
}
