{
    "name": "api",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/api/src",
    "targets": {
        "build": {
            "executor": "@ignisda/nx-rust:build",
            "options": {
                "release": false
            },
            "configurations": {
                "production": {
                    "release": true
                }
            }
        },
        "serve": {
            "executor": "@ignisda/nx-rust:build",
            "options": {
                "release": false,
                "run": true
            },
            "configurations": {
                "production": {
                    "release": true,
                    "run": true
                }
            }
        },
        "test": {
            "executor": "@ignisda/nx-rust:test",
            "options": {
                "release": false
            },
            "configurations": {
                "production": {
                    "release": true
                }
            }
        },
        "lint": {
            "executor": "@ignisda/nx-rust:clippy",
            "options": {
                "fix": false,
                "failOnWarnings": true,
                "noDeps": true
            }
        },
        "fmt": {
            "command": "cargo fmt -p api -- --check"
        }
    },
    "tags": []
}
