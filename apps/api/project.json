{
    "name": "api",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/api/src",
    "namedInputs": {
        "default": ["{projectRoot}/**/*"]
    },
    "targets": {
        "start": {
            "executor": "@ignisda/nx-rust:run",
            "defaultConfiguration": "production",
            "options": {
                "targetDir": "apps/api/target",
                "locked": true
            },
            "configurations": {
                "production": {
                    "release": true,
                    "locked": true,
                    "run": true
                },
                "development": {
                    "release": false,
                    "locked": true,
                    "run": true
                }
            }
        },
        "build": {
            "executor": "@ignisda/nx-rust:build",
            "defaultConfiguration": "production",
            "options": {
                "targetDir": "apps/api/target",
                "locked": true
            },
            "configurations": {
                "production": {
                    "release": true,
                    "locked": true
                },
                "development": {
                    "release": false,
                    "locked": true
                }
            }
        },
        "test": {
            "executor": "@ignisda/nx-rust:test",
            "dependsOn": ["build"],
            "defaultConfiguration": "production",
            "options": {
                "targetDir": "apps/api/target",
                "frozen": true,
                "locked": true
            },
            "configurations": {
                "production": {
                    "release": true
                },
                "development": {
                    "release": false
                }
            }
        },
        "lint": {
            "dependsOn": ["build"],
            "defaultConfiguration": "production",
            "executor": "nx:run-commands",
            "configurations": {
                "production": {
                    "command": "CARGO_TARGET_DIR=apps/api/target cargo clippy --release -- --D warnings --no-deps; unset CARGO_TARGET_DIR"
                },
                "development": {
                    "command": "CARGO_TARGET_DIR=apps/api/target cargo clippy -- --D warnings --no-deps; unset CARGO_TARGET_DIR"
                }
            }
        },
        "fmt": {
            "command": "cargo fmt -p api -- --check"
        }
    },
    "implicitDependencies": ["rust-api-models"],
    "tags": []
}
