{
    "name": "api",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "apps/server/api/src",
    "namedInputs": {
        "default": ["{projectRoot}/**/*"]
    },
    "targets": {
        "serve": {
            "executor": "@ignisda/nx-rust:run",
            "options": {
                "release": false,
                "locked": true,
                "run": true
            },
            "configurations": {
                "production": {
                    "release": true,
                    "locked": true,
                    "run": true
                }
            }
        },
        "build": {
            "executor": "@ignisda/nx-rust:build",
            "options": {
                "release": false,
                "locked": true
            },
            "configurations": {
                "production": {
                    "release": true,
                    "locked": true
                }
            }
        },
        "test": {
            "executor": "@ignisda/nx-rust:test",
            "dependsOn": ["build"],
            "options": {
                "release": false,
                "frozen": true,
                "locked": true
            },
            "configurations": {
                "production": {
                    "release": true,
                    "frozen": true,
                    "locked": true
                }
            }
        },
        "lint": {
            "executor": "@ignisda/nx-rust:clippy",
            "dependsOn": ["build"],
            "options": {
                "fix": false,
                "failOnWarnings": true,
                "noDeps": true
            }
        },
        "fmt": {
            "command": "cargo fmt -p api -- --check"
        }
    },
    "implicitDependencies": ["rust-api-models"],
    "tags": []
}
